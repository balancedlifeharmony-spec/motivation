<script>
const studies=[
// theme, title, author, year, takeaway, url
["Self-Determination Theory","Self-Determination Theory & Intrinsic Motivation","Ryan & Deci",2000,"Autonomy, competence, relatedness drive self-motivated behavior.","https://selfdeterminationtheory.org/SDT/documents/2000_RyanDeci_SDT.pdf"],
["Rewards / Motivation","Extrinsic rewards & intrinsic motivation (meta)","Deci, Koestner & Ryan",1999,"Reward effects depend on contingency/type; controlling rewards can undermine IM.","https://depts.washington.edu/techdocs/papers/deciExtrinsicRewardsAndIntrinsicMotivation99.pdf"],
["Rewards / Motivation","Intrinsic motivation + incentives & performance (meta)","Cerasoli et al.",2014,"Intrinsic → quality; salient incentives → quantity; both matter.","https://selfdeterminationtheory.org/wp-content/uploads/2017/06/2014_Cerasoli_Intrinsic.pdf"],
["Goal-Setting","Building a Practically Useful Theory of Goal Setting","Locke & Latham",2002,"Specific, difficult goals improve performance via core mechanisms.","https://med.stanford.edu/content/dam/sm/s-spire/documents/PD.locke-and-latham-retrospective_Paper.pdf"],
["Goal-Setting","Goal Setting & Group Performance (meta)","Kleingeld, van Mierlo & Arends",2011,"Team goals markedly raise performance; moderated by task complexity.","https://jacksonfall14professionalissues.pbworks.com/w/file/fetch/106743531/KleingeldetalGST.pdf"],
["Implementation Intentions","Implementation intentions & goal achievement (meta)","Gollwitzer & Sheeran",2006,"If-then plans reliably bridge intention–action gaps.","https://www.sciencedirect.com/science/article/pii/S0065260106380021"],
["Self-Efficacy","Self-efficacy & work performance (meta)","Stajkovic & Luthans",1998,"Robust positive relation across tasks and settings.","https://search.pdh.ebscohost.com/login.aspx?AN=1998-10661-005"],
["Expectancy-Value","Motivational Beliefs, Values, and Goals","Eccles & Wigfield",2002,"Expectancy × value explains choices/persistence in learning.","https://www.annualreviews.org/content/journals/10.1146/annurev.psych.53.100901.135153"],
["I-O Overview","Motivation theory in I-O psychology","Kanfer",1990,"Integrates need/value, cognitive choice, self-regulation perspectives.","https://web.mit.edu/curhan/www/docs/Articles/15341_Readings/Motivation/Kanfer_Motivation_Theory_in_Handbook_Indus_Orgl_Psych.pdf"],
["Classic Theory","Theory of Planned Behavior","Ajzen",1991,"Attitudes, norms, control → intentions → behavior.","https://www.sciencedirect.com/science/article/abs/pii/074959789190020T"],
["Procrastination / Temporal","Temporal Motivation Theory","Steel & König",2006,"Expectancy×Value is discounted by Delay; explains procrastination.","https://goal-lab.psych.umn.edu/orgpsych/readings/12.%20Judgment%20%26%20Decision%20Making/Steel%20%26%20Konig%20%282006%29.pdf"],
["Procrastination / Temporal","Nature of procrastination (meta)","Steel",2007,"Procrastination as quintessential self-regulatory failure.","https://studypedia.au.dk/fileadmin/www.studiemetro.au.dk/Procrastination_2.pdf"],
["Interest","Four-phase model of interest development","Hidi & Renninger",2006,"From triggered to well-developed interest; instructional supports matter.","https://www.tandfonline.com/doi/abs/10.1207/s15326985ep4102_4"],
["Workplace SDT","Leader autonomy support (meta)","Slemp et al.",2018,"Autonomy-supportive leaders boost autonomous motivation & outcomes.","https://link.springer.com/article/10.1007/s11031-018-9698-y"],
["Health SDT","SDT in health (meta)","Ng et al.",2012,"Autonomy-support relates to healthier behavior via needs/motivation.","https://selfdeterminationtheory.org/wp-content/uploads/2014/04/2012_NgNtoumanis_PPS.pdf"],
["Health SDT","SDT-informed interventions (meta)","Ntoumanis et al.",2021,"Interventions improve motivation, behavior, and health outcomes.","https://www.tandfonline.com/doi/full/10.1080/17437199.2020.1718529"],
["SDT Update","Intrinsic & extrinsic motivation (2020 review)","Ryan & Deci",2020,"Updated definitions & practice guidance for SDT.","https://selfdeterminationtheory.org/wp-content/uploads/2020/04/2020_RyanDeci_CEP_PrePrint.pdf"],
["Mindset","National growth-mindset RCT","Yeager et al.",2019,"Short online lesson helped lower achievers; boosted advanced math uptake.","https://www.nature.com/articles/s41586-019-1466-y"],
["Mindset","Growth mindset meta-analysis","Sisk et al.",2018,"Average effects are small; context/design moderators are key.","https://englelab.gatech.edu/articles/2018/Sisk,%20Burgoyne%20et%20al.%20(2018)%20-%20Mindset%20and%20Academic%20Achievement.pdf"],
["Behavior Change Techniques","BCT Taxonomy v1 (93 techniques)","Michie et al.",2013,"Common language to design/report behavior-change interventions.","https://openaccess.city.ac.uk/id/eprint/3293/1/Michie%20et%20al%20Annals%20of%20Behavioral%20Medicine%202013%20-%20BCT%20Taxonomy%20v1.pdf"],
];
const list=document.getElementById('list');
function render(){
  const q=document.getElementById('q').value.toLowerCase();
  const theme=document.getElementById('theme').value;
  list.innerHTML='';
  studies.filter(s=>{
    const hay=[...s].join(' ').toLowerCase();
    const themeMatch=!theme || s[0]===theme;
    const qMatch=!q || hay.includes(q);
    return themeMatch && qMatch;
  }).forEach(s=>{
    const el=document.createElement('article'); el.className='card';
    el.innerHTML=`<h3>${s[1]} <span style="font-weight:400;color:#a9b2c7">(${s[2]}, ${s[3]})</span></h3>
      <p><em>${s[0]}</em> — ${s[4]} <a href="${s[5]}" target="_blank" rel="noopener">Read</a></p>`;
    list.appendChild(el);
  });
}
render(); document.getElementById('q').oninput=render; document.getElementById('theme').onchange=render;
</script>
